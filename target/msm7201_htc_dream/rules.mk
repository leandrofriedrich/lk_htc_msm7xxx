LOCAL_DIR := $(GET_LOCAL_DIR)

INCLUDES += -I$(LOCAL_DIR)/include -I$(LK_TOP_DIR)/platform/msm_shared/include

PLATFORM := msm7200a

MEMBASE := 0x00000000 # SMI
MEMSIZE := 0x00080000 # 0.5MB

#HEAP_START := 0x00100000 #Make a hole for SPL global variables
#HEAP_LEN := 0x00100000 #should be enough for everyone, one can extend it up to 7

BASE_ADDR        := 0x10000000

TAGS_ADDR        := BASE_ADDR+0x00000100
KERNEL_ADDR      := BASE_ADDR+0x00008000
RAMDISK_ADDR     := BASE_ADDR+0x00800000
SCRATCH_ADDR     := BASE_ADDR+0x01000000

KEYS_USE_GPIO_KEYPAD := 0
MSM_NAND_WINCE := 1

DEFINES += DISPLAY_TYPE_MDDI=0
DEFINES += DISPLAY_TYPE_LCDC=1
DEFINES += DISPLAY_SPLASH_SCREEN=0
DEFINES += WITH_DEV_FBCON=1
DEFINES += DEX_DEBUG=0
DEFINES += WITH_STATIC_HEAP=1
DEFINES += HEAP_START=0x00100000
DEFINES += HEAP_LEN=0x00100000

DEVS += fbcon
MODULES += dev/fbcon
MODULES += dev/keys
MODULES += dev/battery
MODULES += lib/ptable

DEFINES += \
	SDRAM_SIZE=$(MEMSIZE) \
	MEMBASE=$(MEMBASE) \
	BASE_ADDR=$(BASE_ADDR) \
	TAGS_ADDR=$(TAGS_ADDR) \
	KERNEL_ADDR=$(KERNEL_ADDR) \
	RAMDISK_ADDR=$(RAMDISK_ADDR) \
	SCRATCH_ADDR=$(SCRATCH_ADDR)

OBJS += \
	$(LOCAL_DIR)/init.o \
	$(LOCAL_DIR)/board_htcdream.o \
	$(LOCAL_DIR)/msm7200a_hsusb.o \
	$(LOCAL_DIR)/gpio_keys.o \
	$(LOCAL_DIR)/dex_comm.o \
	$(LOCAL_DIR)/dex_vreg.o \
	$(LOCAL_DIR)/atags.o
